#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>
#include <sys/wait.h>
#include <sys/stat.h>

int main() {
  printf("Hello World!\n");
  pid_t pid = fork();

  if (pid > 0) {
    int wstatus = 0;

    if (waitpid(pid, &wstatus, 0) == -1){
      perror("waitpid");
      exit(EXIT_FAILURE);
    }
  } else if (pid == 0) {
    execl("/usr/bin/", "ls" , NULL);
  }
  return 0;
}
